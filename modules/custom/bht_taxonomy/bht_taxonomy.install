<?php

/**
 * Implements hook_install().
 */
function bht_taxonomy_install() {
  // i18n_taxonomy does have to run before this module
  db_update('system')
    ->fields(array('weight' => 101,))
    ->condition('name', 'the_aim_taxonomy', '=')
    ->condition('type', 'module', '=')
    ->execute();
}

